// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model User {
  id    String @id
  tag   String
  apiKey String @unique
  quota Int
}

model Prompt {
  id        String   @id
  title     String
  content   String
  userId    String
  updatedAt DateTime

  @@index(userId)
}

model Message {
  id        String   @id
  role      String
  content   String
  userId    String
  promptId  String
  sessionId String
  createdAt DateTime

  @@index(userId)
  @@index(promptId)
  @@index(sessionId)
}
