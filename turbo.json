{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "server#build": {
      "dependsOn": ["^build"],
      "env": [
        "MEILISEARCH_ENDPOINT",
        "MEILISEARCH_MASTER_KEY",
        "JWT_SECRET_KEY",
        "ADMIN_TOKEN"
      ],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
